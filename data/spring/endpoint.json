{
    "version": "1.0.0",
    "tpl": [
        {
            "type": "snippet",
            "template": "@if(username)\n  <h1> Hello {{ username }} </h1>\n@else\n  <h1> Hello anonymous </h1>\n@endif"
        },
        {
            "type": "file",
            "template": "",
            "location": ""
        }
    ],
    "schema": [
        {
            "type": "select",
            "items": ["GET", "POST", "PUT", "PATCH", "DELETE"],
            "multiple": false,
            "name": "method",
            "rule": "required|string|in:GET,POST,PUT,PATCH,DELETE"
        },
        {
            "type": "text",
            "name": "username",
            "rule": "required|string"
        }
    ]
}
